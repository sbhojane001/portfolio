---
import { siteConfig } from "../config";
const hasCertifications = siteConfig.certifications && siteConfig.certifications.length > 0;
---
{hasCertifications && (
  <section id="certifications" class="p-8 sm:p-12 md:p-16 lg:p-24">
    <div>
      <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
        Certifications
      </h2>
      <div
        class="w-[75px] h-[5px] mt-2 mb-8 rounded-full"
        style={`background-color: ${siteConfig.accentColor}`}
      />
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16">
        {siteConfig.certifications.map((cert) => {
          let badgeUrl = "";
          if (cert.issuingAuthority === "AWS") {
            badgeUrl = "https://upload.wikimedia.org/wikipedia/commons/9/93/Amazon_Web_Services_Logo.svg";
          } else if (cert.issuingAuthority === "Microsoft") {
            badgeUrl = "https://upload.wikimedia.org/wikipedia/commons/4/44/Microsoft_logo.svg";
          }
          return (
            <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-4 sm:p-5 md:p-6 hover:shadow-md transition-shadow duration-300 flex min-h-[180px]">
              {badgeUrl && (
                <img src={badgeUrl} alt={cert.issuingAuthority + ' logo'} class="w-16 h-16 mr-6 object-contain self-start" />
              )}
              <div class="flex-1 flex flex-col justify-between">
                <div>
                  <h3 class="text-lg sm:text-xl font-semibold text-gray-900 mb-2">
                    {cert.name}
                  </h3>
                  <p class="text-base sm:text-lg mb-1" style={`color: ${siteConfig.accentColor}`}>
                    {cert.issuingAuthority}
                  </p>
                  {cert.credentialId && (
                    <span class="text-xs sm:text-sm text-gray-500 block mt-1">
                      Credential ID: {cert.credentialId}
                    </span>
                  )}
                </div>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </section>
)}
